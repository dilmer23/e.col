<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_rapidos_sedimentos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlueJeans"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clima_rutinas_acesso"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@color/colorBlueJeans"
            android:fontFamily="@font/ecol_font"
            android:gravity="center"
            android:shadowColor="#8a6603"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1.8"
            android:text="Evaluación del índice de hábitat fluvial (IHF)"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueJeans"
            android:fontFamily="@font/ecol_font"
            android:shadowColor="#8a6603"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1.8"
            android:text="@string/descrpcion_ihf"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueJeans"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtpuntos"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:text="Puntos:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/txtresultadospuntos"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:shrinkColumns="5"
            android:stretchColumns="4">

            <TableRow
                android:id="@+id/tableRow0"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_button"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/txtinclusion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textSize="25sp"
                    android:text="Inclusión rápidos-sedimentación pozas"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_span="6"/>
            </TableRow>



            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:background="@drawable/bordes"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/idImagen1"
                    android:layout_width="166dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/dominio_rapidos" />

                <TextView
                    android:id="@+id/txtrapidos1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Rápidos"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtdescripcionrapido1"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ecol_font"
                   android:gravity="center"
                    android:text="Piedras, cantos y gravas no fijadas por sedimentos finos. Inclusión 0-30%"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkrapido1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:background="@drawable/bordes"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/idImagen2"
                    android:layout_width="166dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rapido2a"/>
                <TextView
                    android:id="@+id/txtrapidos2"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:text="Rápidos"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtdescripcionrapido2"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:gravity="center_horizontal"
                    android:textSize="17sp"
                    android:fontFamily="@font/ecol_font"
                    android:textStyle="bold"
                    android:text="Piedras, cantos y gravas poco fijadas por sedimentos finos. Inclusión 30-60%"/>

                <CheckBox
                    android:id="@+id/checkrapido2"
                    android:layout_width="94dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:background="@drawable/bordes"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/idImagen3"
                    android:layout_width="166dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rapido3a" />
                <TextView
                    android:id="@+id/txtrapidos3"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:text="Rápidos"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtdescripcionrapido3"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"
                    android:fontFamily="@font/ecol_font"
                    android:textStyle="bold"
                    android:text="Piedras ,cantos gravas y medianamente fijado por sedimentos finos. Inclusión > 60%"/>

                <CheckBox
                    android:id="@+id/checkrapido3"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:background="@drawable/bordes"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/idImagen5"
                    android:layout_width="166dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/sed3a" />
                <TextView
                    android:id="@+id/txtrapidos5"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:text="Sólo pozas"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtdescripcionrapido5"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:gravity="center_horizontal"
                    android:textSize="17sp"
                    android:fontFamily="@font/ecol_font"
                    android:textStyle="bold"
                    android:text="Sedimentación 0-30%"/>

                <CheckBox
                    android:id="@+id/checkrapido5"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="match_parent"
                android:background="@drawable/bordes"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/idImagen6"
                    android:layout_width="166dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/sed1a" />
                <TextView
                    android:id="@+id/txtrapidos6"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:text="Sólo pozas"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtdescripcionrapido6"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:gravity="center_horizontal"
                    android:textSize="17sp"
                    android:fontFamily="@font/ecol_font"
                    android:textStyle="bold"
                    android:text="Sedimentación 30-60%"/>

                <CheckBox
                    android:id="@+id/checkrapido6"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="match_parent"
                android:background="@drawable/bordes"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/idImagen7"
                    android:layout_width="166dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/sed2a" />
                <TextView
                    android:id="@+id/txtrapidos7"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:text="Sólo pozas"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtdescripcionrapido7"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:gravity="center_horizontal"
                    android:textSize="17sp"
                    android:fontFamily="@font/ecol_font"
                    android:textStyle="bold"
                    android:text="Sedimentación > 60%"/>

                <CheckBox
                    android:id="@+id/checkrapido7"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp" />
            </TableRow>
            <TextView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </TableLayout>
    </ScrollView>

</LinearLayout>