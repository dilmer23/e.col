<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ubicacion">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoecol1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="135dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ubicacion_img" />
                <TextView
                    android:id="@+id/txtubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ubicacion_manual"
                    android:fontFamily="@font/ecol_font"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="19dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/botones_consejos">
                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="41dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ubicacion" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="40dp"
                        android:textColorHint="@color/black"
                        android:hint="longitud">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtLon"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/colorFlower"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/botones_consejos">
                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="41dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ubicacion" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="40dp"
                        android:textColorHint="@color/black"
                        android:hint="Latitud">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtLat"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/colorFlower"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/botones_consejos">
                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="41dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/icono_dirrecion" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="40dp"
                        android:textColorHint="@color/black"
                        android:hint="Dirrección">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtDireccion"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/colorFlower"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/botones_consejos">
                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="41dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/icono_altura" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="40dp"
                        android:textColorHint="@color/black"
                        android:hint="Altura">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtaltura"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:maxLength="4"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/colorFlower"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btnmanualcordenadas"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginStart="50dp"
                        android:background="@drawable/custom_button"
                        android:drawableEnd="@drawable/touch"
                        android:text="Calcular Ubicación Manual"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">
        <Button
            android:id="@+id/btnenviarUbicacion"
            android:onClick="enviarparametro"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableEnd="@drawable/siguiente_icono"
            android:background="@drawable/custom_button"
            android:text="Siguiente"
            android:textAlignment="center"
            android:textColor="#000000"/>
    </RelativeLayout>
</RelativeLayout>