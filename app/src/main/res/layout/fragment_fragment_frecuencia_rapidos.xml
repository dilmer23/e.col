<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_frecuencia_rapidos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlueJeans"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clima_rutinas_acesso"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@color/colorBlueJeans"
            android:fontFamily="@font/ecol_font"
            android:gravity="center"
            android:shadowColor="#8a6603"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1.8"
            android:text="Evaluación del índice de hábitat fluvial (IHF)"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueJeans"
            android:fontFamily="@font/ecol_font"
            android:shadowColor="#8a6603"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1.8"
            android:text="@string/descrpcion_ihf"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="25sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueJeans"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtpuntos"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:text="Puntos:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/txtresultadospuntos"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:shrinkColumns="5"
            android:stretchColumns="4">

            <TableRow
                android:id="@+id/tableRow0"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_button"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/txtinclusion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="6"
                    android:gravity="center"
                    android:text="Frecuencias de rápidos"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </TableRow>


            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:background="@drawable/bordes"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/idImagen1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rap1a" />


                <TextView
                    android:id="@+id/txtdescripcionrapido1"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:fontFamily="@font/ecol_font"
                    android:gravity="center"
                    android:text="@string/rapido1"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/rapido1"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="30dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bordes">

                <ImageView
                    android:id="@+id/idImagen2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rap2a" />


                <TextView
                    android:id="@+id/txtdescripcionrapido2"
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="-25dp"
                    android:fontFamily="@font/ecol_font"
                    android:text="Escasa frecuencia de rápidos.Relacion distancia entre rapidos anchura de 7-15 metros"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/rapido2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="30dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bordes">

                <ImageView
                    android:id="@+id/idImagen3"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rap3a" />


                <TextView
                    android:id="@+id/txtdescripcionrapido3"
                    android:layout_width="90dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="-25dp"
                    android:fontFamily="@font/ecol_font"
                    android:text="Ocurrencia ocacional de Rápidos,Relación distancia entre rapido anchura 15-25 metros"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/rapido3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="30dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:background="@drawable/bordes"
                android:layout_height="120dp">


                <ImageView
                    android:id="@+id/idImagen3"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rap4a" />

                <TextView
                    android:id="@+id/txtdescripcionrapido3"
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="-25dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:fontFamily="@font/ecol_font"
                    android:textStyle="bold"
                    android:text="Contancia de flujo laminar o rápido somero.Relación distancia entre rapido anchura mayor a 25 metros"/>

                <CheckBox
                    android:id="@+id/rapido4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="30dp" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:background="@drawable/bordes"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/idImagen3"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rap5a" />


                <TextView
                    android:id="@+id/txtdescripcionrapido3"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/ecol_font"
                    android:textStyle="bold"
                    android:text="Sólo pozas"/>

                <CheckBox
                    android:id="@+id/rapido5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="30dp" />
            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </TableLayout>
    </ScrollView>

</LinearLayout>