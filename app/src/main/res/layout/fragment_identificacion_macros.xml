<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".identificacion_macros">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
    <Button
        android:id="@+id/btnregresarestudios1"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/precionado_boton"
        android:drawableStart="@drawable/regresar_icono"
        android:fontFamily="sans-serif-black"
        android:text="Regresar/Cerrar"
        android:layout_alignParentBottom="true"
        android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pantallacarga">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <com.zolad.zoominimageview.ZoomInImageView
                        android:id="@+id/imagenmuestreo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="60dp"
                        android:src="@drawable/toma_de_muestras1" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/ecol_font"
                        android:textColor="@color/black"
                        android:background="#98ffffff"
                        android:textSize="30sp"
                        android:text="Registro Variables"
                        android:textAlignment="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="27dp"
                        android:textColor="@color/black"
                        android:background="#98ffffff"
                        android:text="@string/cualitativo"
                        android:textAlignment="center"/>
                    <com.zolad.zoominimageview.ZoomInImageView
                        android:id="@+id/imagenmuestreo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="60dp"
                        android:src="@drawable/toma_de_muestras2" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:fontFamily="@font/ecol_font"
                        android:textColor="@color/black"
                        android:background="#98ffffff"
                        android:textSize="30dp"
                        android:textAlignment="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="27dp"
                        android:textColor="@color/black"
                        android:background="#98ffffff"
                        android:text="@string/cualitativo"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="27sp"
                android:textColor="@color/black"
                android:textAlignment="center"/>
</RelativeLayout>
</FrameLayout>