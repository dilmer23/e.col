<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".sustratoartificial">

    <ScrollView
        android:id="@id/sustrato"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pantallacarga">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.zolad.zoominimageview.ZoomInImageView
                        android:id="@+id/sustrato"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="60dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/sustratoartificial"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Sustrato Artificial"
                            android:textSize="30sp"
                            android:textColor="@color/black"
                            android:background="#99ffffff"
                            android:fontFamily="@font/ecol_font"
                            android:textAlignment="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sustrato_artificial"
                        android:textSize="27sp"
                        android:textAlignment="center"
                        android:background="#99ffffff"
                        android:textColor="@color/black"/>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnregresarestudios1"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/precionado_boton"
            android:drawableStart="@drawable/regresar_icono"
            android:fontFamily="sans-serif-black"
            android:text="Regresar/Cerrar"
            android:layout_alignParentBottom="true"
            android:textStyle="bold" />
    </RelativeLayout>

</FrameLayout>