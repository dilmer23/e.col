<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ecolfondo4_opt"
    android:orientation="vertical"
    tools:context=".consejosActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/idImagen"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/infromacion" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/idNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ecol_font"
                        android:text="@string/tittulo_consejos"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btnConsejoslab"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/botones_consejos"
                    android:drawableStart="@drawable/ic_icono_estudio"
                    android:fontFamily="sans-serif-black"
                    android:onClick="tipodeestudios"
                    android:text="TIPO DE ESTUDIO"
                    android:textAllCaps="false"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnConsejoscamp"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/botones_consejos"
                    android:drawableStart="@drawable/protocolo_de_campo"
                    android:fontFamily="sans-serif-black"
                    android:text="PROTOCOLO DE CAMPO"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:onClick="protocolocampo"/>

                <Button
                    android:id="@+id/btnImplementosMues"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/botones_consejos"
                    android:fontFamily="sans-serif-black"
                    android:text="EQUIPOS  Y HERRAMIENTAS"
                    android:drawableStart="@drawable/icono_equipos_instrumentos"
                    android:onClick="equipo_herramientas"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnSiguienteConsejos"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="20dp"
            android:drawableEnd="@drawable/siguiente_icono"
            android:background="@drawable/custom_button"
            android:onClick="siguienteubicacion"
            android:text="Siguiente"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:textColor="#000000"/>
    </RelativeLayout>

    <FrameLayout
    android:id="@+id/contendortipoestudios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-10dp"
    android:orientation="vertical" />
</RelativeLayout>