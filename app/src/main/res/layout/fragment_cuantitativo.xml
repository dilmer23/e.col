<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ff6b00"
    tools:context=".cuantitativo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnregresarestudios1"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/precionado_boton"
            android:drawableStart="@drawable/regresar_icono"
            android:fontFamily="sans-serif-black"
            android:text="Regresar/Cerrar"
            android:layout_alignParentBottom="true"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ecolfondo3_opt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imagenmuestreo1"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginStart="60dp"
                            android:layout_marginEnd="60dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/cuantitativo" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ecol_font"
                                android:text="Tipo De Ecosistema Cauntitativo"
                                android:textSize="25sp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:background="#99ffffff" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/estudio_cuantitativo"
                            android:textColor="@color/black"
                            android:textSize="27dp"
                            android:background="#99ffffff"
                            android:textAlignment="center"/>
                    </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>